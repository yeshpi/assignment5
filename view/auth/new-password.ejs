<%- include('../includes/head.ejs')%>
    <link rel="stylesheet" href="/css/auth.css">
    <link rel="stylesheet" href="/css/forms.css">


    </head>

    <body>
        <%- include('../includes/navigation.ejs')%>
            <main>

                 <% if(userMessage.length>0){%>
                <div class="user-message user-message--error"><%=userMessage%></div>
                <%}%>
                <form class="login-form" action="/new-password" method="post">
                    <input type="hidden" value="<%= csrfToken %>" name="_csrf">
                    <input type="hidden" name="userId"  value="<%=userId%>">
                       <div class="form-control">
                        <label for="password">New Password</label>
                        <input type="password" name="password" id="password">
                    </div>
                    <div class="form-control">
                        <label for="passwordComfirm">Confirm Password</label>
                        <input type="password" name="passwordConfirm" id="passwordComfirm">
                    </div>
                    <button class="btn" type="submit">Update password</button>
                </form>
            </main>

        <%- include('../includes/end.ejs')%>